{
  "name": "@github-accessibility-service/integration-bridge",
  "version": "1.0.0",
  "description": "Integration bridge between accessibility-scraper and mcp-accessibility-evaluator",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "accessibility",
    "integration",
    "wcag",
    "aria",
    "scraping",
    "evaluation",
    "mcp"
  ],
  "author": "GitHub Accessibility Service Contributors",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "ora": "^7.0.1",
    "puppeteer": "^24.16.2",
    "cheerio": "^1.0.0-rc.12",
    "axe-core": "^4.8.0",
    "jsdom": "^24.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
